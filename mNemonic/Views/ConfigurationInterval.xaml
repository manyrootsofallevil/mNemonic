<Window x:Class="mNemonic.Forms.ConfigurationInterval"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="mNemonic Interval Configuration" Height="200" Width="400" Closed="Window_Closed" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="184*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="Interval" HorizontalAlignment="Left" Height="23" Margin="296,63,0,0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Top" Width="54" Grid.Column="1"/>
        <Label Content="Interval between Cards (in minutes)" HorizontalAlignment="Left" Margin="6,63,0,0" VerticalAlignment="Top" Width="248" Height="41" Grid.Column="1" />

        <Button Content="Apply" HorizontalAlignment="Left" Margin="6,129,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Grid.Column="1"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="275,129,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click" Grid.Column="1"/>
        <Label Content="Use mNemonic Manager for permanent changes. &#xD;&#xA;Changes will be lost when application next restarts" Grid.Column="1" HorizontalAlignment="Left" Margin="6,4,0,0" VerticalAlignment="Top" Height="41" FontWeight="Bold"/>

    </Grid>
</Window>
